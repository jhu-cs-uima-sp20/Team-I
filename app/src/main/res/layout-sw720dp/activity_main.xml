<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/play_button"
        android:layout_width="@dimen/play_btn_width"
        android:layout_height="@dimen/play_btn_height"
        android:background="@drawable/play_button_transparent"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.843" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="@dimen/settings_btn_width"
        android:layout_height="@dimen/settings_btn_height"
        android:background="@drawable/settings_button_transparent"
        app:layout_constraintBaseline_toBaselineOf="@+id/skins_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toEndOf="@+id/skins_button" />

    <Button
        android:id="@+id/skins_button"
        android:layout_width="@dimen/skins_btn_width"
        android:layout_height="@dimen/skins_btn_height"
        android:background="@drawable/skins_button_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="@dimen/title_width"
        android:layout_height="@dimen/title_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261"
        app:srcCompat="@drawable/title_transparent" />

    <ImageView
        android:id="@+id/paddleView"
        android:layout_width="@dimen/paddle_width"
        android:layout_height="@dimen/paddle_height"
        app:layout_constraintBottom_toTopOf="@+id/play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_title"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/brick_white" />

    <ImageView
        android:id="@+id/leftButtonView"
        android:layout_width="@dimen/tri_dimen"
        android:layout_height="@dimen/tri_dimen"
        app:layout_constraintBottom_toBottomOf="@+id/paddleView"
        app:layout_constraintEnd_toStartOf="@+id/paddleView"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/paddleView"
        app:srcCompat="@drawable/left_arrow" />

    <ImageView
        android:id="@+id/rightButtonView"
        android:layout_width="@dimen/tri_dimen"
        android:layout_height="@dimen/tri_dimen"
        app:layout_constraintBottom_toBottomOf="@+id/paddleView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toEndOf="@+id/paddleView"
        app:layout_constraintTop_toTopOf="@+id/paddleView"
        app:srcCompat="@drawable/right_arrow" />

    <TextView
        android:id="@+id/tv_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/highscore"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/highscore_txt_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_highscore_val"
        app:layout_constraintEnd_toStartOf="@+id/tv_highscore_val"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_highscore_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/highscore_val"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/highscore_txt_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

</androidx.constraintlayout.widget.ConstraintLayout>